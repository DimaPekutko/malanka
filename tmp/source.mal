dynamic "/lib/x86_64-linux-gnu/libc.so.6"

a @int = 0

.factorial @int # n @int:
    if n > 1:
        !factorial(n-1)*n
    end
    !1
end

.main @void:
    printf("Type factorial argument and then type 'y':")
    scanf("%d", &a)
    if a > 12:
        printf("Argument is too huge for factorial function!")
        exit()
    else:
        printf("Factorial of %d is %d", a, factorial(a))
    end
end

main()