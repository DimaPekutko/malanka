{
  "compilerOptions": {
    "strict": true,
    "baseUrl": "src",
    "outDir": "build",
    // "outFile": "build/compiled.js",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "removeComments": true,
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "alwaysStrict": true,
    "resolveJsonModule": true,
    "sourceMap": false,
    "skipLibCheck": true,
    "paths": {}
  }
}
